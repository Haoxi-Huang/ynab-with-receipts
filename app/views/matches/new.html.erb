<%= turbo_frame_tag "match_modal" do %>
  <div class="fixed inset-0 bg-gray-500/75 flex items-center justify-center z-50" data-controller="modal">
    <div class="bg-white rounded-xl shadow-xl max-w-2xl w-full mx-4 max-h-[80vh] flex flex-col">
      <div class="flex items-center justify-between p-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Link YNAB Transaction</h2>
        <%= link_to receipt_path(@receipt), class: "text-gray-400 hover:text-gray-500", data: { turbo_frame: "match_modal" } do %>
          <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        <% end %>
      </div>

      <div class="p-4 border-b border-gray-200" data-controller="search" data-search-url-value="<%= search_ynab_transactions_path %>" data-search-receipt-id-value="<%= @receipt.id %>">
        <input type="text"
               placeholder="Search by payee, account, or memo..."
               class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
               data-search-target="input"
               data-action="input->search#perform">
        <div data-search-target="results" class="hidden"></div>
      </div>

      <div class="overflow-y-auto flex-1 p-4" id="suggestions-list">
        <% if @error.present? %>
          <div class="rounded-md bg-red-50 p-4">
            <p class="text-sm text-red-700"><%= @error %></p>
          </div>
        <% elsif @suggestions.empty? %>
          <p class="text-sm text-gray-500 text-center py-8">No matching transactions found. Try searching above.</p>
        <% else %>
          <div class="space-y-2">
            <p class="text-xs text-gray-500 mb-3">Suggested matches (best first):</p>
            <% @suggestions.first(20).each do |match| %>
              <% txn = match[:transaction] %>
              <% score = match[:score] %>
              <div class="flex items-center justify-between p-3 rounded-lg border border-gray-200 hover:border-indigo-300 hover:bg-indigo-50/50 transition-colors">
                <div class="flex-1 min-w-0">
                  <div class="flex items-center gap-2">
                    <span class="text-sm font-medium text-gray-900 truncate"><%= txn.payee_name || "Unknown Payee" %></span>
                    <% if score >= 80 %>
                      <span class="inline-flex items-center rounded-full bg-green-100 px-1.5 py-0.5 text-xs font-medium text-green-700">Strong match</span>
                    <% elsif score >= 50 %>
                      <span class="inline-flex items-center rounded-full bg-yellow-100 px-1.5 py-0.5 text-xs font-medium text-yellow-700">Possible</span>
                    <% end %>
                  </div>
                  <div class="flex items-center gap-3 mt-1 text-xs text-gray-500">
                    <span><%= txn.account_name %></span>
                    <span>&middot;</span>
                    <span><%= format_ynab_date(txn.date) %></span>
                    <span>&middot;</span>
                    <span class="font-medium text-gray-700"><%= format_ynab_amount(txn.amount) %></span>
                  </div>
                </div>
                <%= button_to "Link", receipt_match_path(@receipt),
                    params: { transaction_id: txn.id },
                    method: :post,
                    class: "ml-3 inline-flex items-center rounded-md bg-indigo-600 px-3 py-1.5 text-xs font-semibold text-white shadow-sm hover:bg-indigo-500 flex-shrink-0" %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
